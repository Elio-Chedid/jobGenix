<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtJtitle"
        android:textSize="30dp"
        android:layout_marginStart="1dp"
        android:text="job title: waiter"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtJdesc"
        android:textSize="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="job decription: we are looking for an experienced waiter that is capable to work under pressure"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCname"
        android:textSize="25dp"
        android:layout_margin="5dp"
        android:layout_marginStart="1dp"
        android:text="company name: AUST"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:id="@+id/btnAccept"
        android:layout_gravity="center_horizontal"/>









</LinearLayout>